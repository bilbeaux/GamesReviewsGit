<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="20"
    tools:context="com.example.gamesreviews.SetupActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphismes"
        android:id="@+id/graphismeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toStartOf="@+id/graphismeBar"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/graphismeBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graphismeBar"
        android:layout_below="@+id/graphismeText"
        android:layout_alignParentStart="true"
        android:numStars="5"
        android:clickable="false" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dureeBar"
        android:layout_below="@+id/dureeText"
        android:layout_alignParentStart="true"
        android:numStars="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durée de vie"
        android:id="@+id/dureeText"
        android:layout_below="@+id/graphismeBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/graphismeBar"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scenarioBar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scenarioText"
        android:layout_alignEnd="@+id/scenarioText"
        android:numStars="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scénario"
        android:id="@+id/scenarioText"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:layout_below="@+id/dureeBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dureeBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameplayBar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameplayText"
        android:layout_alignParentLeft="true"
        android:numStars="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gameplay"
        android:id="@+id/gameplayText"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:layout_below="@+id/scenarioBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scenarioBar" />
</RelativeLayout>