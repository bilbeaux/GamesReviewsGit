<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="20"
    tools:context="com.example.gamesreviews.SetupActivity$PlaceholderFragment" >

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical|top"
        android:layout_row="8"
        android:gravity="center_vertical"
        android:text="Scénario"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_height="43dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="11"
        android:gravity="center_vertical"
        android:text="Durée de vie"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="14"
        android:gravity="center_vertical"
        android:text="Gameplay"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView5"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_row="17"
        android:text="Commentaire"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="154dp"
        android:layout_height="88dp"
        android:layout_column="1"
        android:layout_gravity="start|top"
        android:layout_row="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="Nom du jeu"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="6"
        android:gravity="center_vertical"
        android:text="Graphismes"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|bottom"
        android:layout_row="6"
        android:focusable="true"
        android:maxWidth="189dp"
        android:numStars="5" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="2"
        android:src="@drawable/ic_launcher" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:numStars="5" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="11"
        android:numStars="5" />

    <RatingBar
        android:id="@+id/ratingBar4"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="14"
        android:numStars="5" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="188dp"
        android:layout_height="139dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="17"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="19"
        android:text="Poster la note" />

</GridLayout><!-- From: file:/C:/Users/aloïs/AndroidstudioProjects/GamesReviews/app/src/main/res/layout/fragment_setup.xml -->